  <div class="jumbotron">
    <% unless params[:search] %>
      <table class="user_lists_l">
        <thead>
          <th><h2 class="jumbotron_title"><%=current_user.display_name %>'s Playlists:</h2></th>
        </thead> 
        <tbody>
          <% current_user.playlists.each do |playlist| %>
          <tr>
            <td><%= link_to "#{playlist.name}", playlist_path(playlist.id) %></td>
          </tr>
          <% end %> 
        </tbody> 
      </table>
       <table class="user_lists_r">
        <thead>
          <th><h2 class="jumbotron_title">Followed Playlists:</h2></th>
        </thead> 
        <tbody>
          <% current_user.all_following.each do |playlist| %>
          <tr>
            <td><%= link_to "#{playlist.name}", playlist_path(playlist.id) %></td>
          </tr>
          <% end %>
        </tbody> 
      </table>
    <% else %>
      <h2 class="jumbotron_title">Playlist Search Results</h2>
        <% @playlists.each do |playlist| %>
        <ul>
         <li>
           <%= link_to playlist.name, follow_playlist_path(playlist) %>
         </li>
       </ul> 
      <% end %>
     <% end %>
 </div>
 <button type="button" class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal">
  New Playlist
</button>

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(@playlist, html: { class: "form-horizontal" }) do |form| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Playlist</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="playlist_name" class="col-sm-2 control-label">Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="playlist[name]" id="Name" placeholder="what would you like to name your new playlist?">
          </div>
        </div>

        <div class="form-group">  
          <label for="playlist_contributers" class="col-sm-2 control-label">Contributers</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="playlist[list_contributers]" id="playlist_contributers" placeholder="seperated by commas">
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-default">Create List</button>     
      </div>
      <% end %>
    </div>
  </div>
</div>

