<div class="playlist_show">
  <div class="row">
    <div class="col-md-4">
      <div class="currently_playing">
        <h3><%= @playlist.name.titleize %></h3>
        <ol>
          <% @playlist.tracks.each do |track| %>
          <li>
            <h5><b><%= track.name %></b></h5>
            <em>by</em>
            <b><%= track.artists %></b>
            <span id="track_contributer"><em>added by</em> <%= track.contributer %></span>
          </li>
          <% end %>
        </ol>
      </div>
    </div>
  <div class="col-md-8">
    <div class="add_to_playlist">
      <p>contributers: <%= @playlist.contributers.join( ", ").titleize %></p>
      <h1>It's <span class="my_name"><%= @playlist.current_contributer.titleize %>'s</span> turn to pick a song!</h1>
      <div class="form-group">
        <input id="spotify_search" type="text" class="form-control" placeholder="Search Spotify" data-search-uri="<%= search_playlist_tracks_url(@playlist) %>" >
      </div>
      <!-- <button type="submit" class="btn btn-default">Submit</button> -->
    </div>
    <div id="spotify_search_results">
    
    </div>
  </div>
</div>    
